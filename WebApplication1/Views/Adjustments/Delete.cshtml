@model WebApplication1.Models.Adjustment

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверены что хотите удалить заявку на наладку оборудования?</h3>
<div>
    <h4>Оборудование</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название оборудования
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameEq)
        </dd>
        <dt class = "col-sm-2">
            Статус
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            ФИО наладчика
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Worker.WorkerName)
        </dd>
        <dt class = "col-sm-2">
            Комментарии
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comments)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Adjustments">Вернуться к списку</a>
    </form>
</div>
