@model WebApplication1.Models.Adjustment

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать заявку</h1>

<h4>на наладку оборудования</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="editForm"  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NameEq" class="control-label">Название оборудования</label>
                <select asp-for="NameEq" class="form-control" asp-items="ViewBag.Equipments"></select>
               @*  <span asp-validation-for="NameEq" class="text-danger"></span> *@
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Статус</label>
                <select asp-for="Status" class="form-control">
                    <option value="">Выберите статус</option>
                    <option value="Создана">Создана</option>
                    <option value="В работе">В работе</option>
                    <option value="Выполнена">Выполнена</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="WorkerId" class="control-label">ФИО Наладчика</label>
                <select asp-for="WorkerId" class="form-control" asp-items="ViewBag.Workers"></select>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label">Комментарии</label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Adjustments">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
